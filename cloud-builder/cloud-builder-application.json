{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "AWS CloudFormation Template for IoT Core Setup",
    "Parameters": {
        "Environment": {
            "Type": "String",
            "Description": "Environment identifier (e.g., dev, prod)",
            "Default": "dev",
            "AllowedValues": [
                "dev",
                "prod"
            ],
            "ConstraintDescription": "Must be either dev or prod."
        },
        "S3BucketName": {
            "Type": "String",
            "Description": "S3 Bucket name for Lambda deployment package",
            "Default": "awslambda-eu-cent-1-tasks"
        }
    },
    "Resources": {
        "IoTPolicy": {
            "Type": "AWS::IoT::Policy",
            "Properties": {
                "PolicyName": {
                    "Fn::Sub": "${Environment}-iot-policy"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": "iot:Connect",
                            "Resource": "arn:aws:iot:${AWS::Region}:${AWS::AccountId}:client/basicPubSub"
                        },
                        {
                            "Effect": "Allow",
                            "Action": "iot:Publish",
                            "Resource": "arn:aws:iot:${AWS::Region}:${AWS::AccountId}:topic/sdk/test/python"
                        },
                        {
                            "Effect": "Allow",
                            "Action": "iot:Subscribe",
                            "Resource": "arn:aws:iot:${AWS::Region}:${AWS::AccountId}:topic/device/9/ack"
                        }
                    ]
                }
            }
        },
        "IoTTopicRule": {
            "Type": "AWS::IoT::TopicRule",
            "Properties": {
                "RuleName": {
                    "Fn::Sub": "${Environment}-iot-rule-write-to-sqs"
                },
                "TopicRulePayload": {
                    "Sql": "SELECT * FROM 'sdk/test/python'",
                    "Actions": [
                        {
                            "Sqs": {
                                "RoleArn": "arn:aws:iam::${AWS::AccountId}:role/${Environment}-iot-sqs-role",
                                "QueueUrl": {
                                    "Ref": "SQSQueue"
                                },
                                "UseBase64": true
                            }
                        }
                    ],
                    "ErrorAction": {
                        "CloudwatchLogs": {
                            "RoleArn": "arn:aws:iam::${AWS::AccountId}:role/${Environment}-iot-logs-role",
                            "LogGroupName": {
                                "Fn::Sub": "/aws/iot/${Environment}-rule-log"
                            },
                            "BatchMode": false
                        }
                    }
                }
            }
        },
        "IoTRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Sub": "${Environment}-iot-sqs-role"
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "iot.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Sub": "${Environment}-iot-to-sqs-policy"
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": "sqs:SendMessage",
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "SQSQueue",
                                            "Arn"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "LambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Sub": "${Environment}-lambda-data-acquisition"
                },
                "Handler": "sqs_lambda_function.handler",
                "Role": {
                    "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/${Environment}-lambda-execution-role"
                },
                "Runtime": "python3.8",
                "Code": {
                    "S3Bucket": {
                        "Ref": "S3BucketName"
                    },
                    "S3Key": "lambda_function_package.zip"
                },
                "Timeout": 3,
                "MemorySize": 128,
                "Environment": {
                    "Variables": {
                        "TIMESTREAM_DATABASE": "MyTimestreamDatabase",
                        "TIMESTREAM_TABLE": "MyTimestreamTable"
                    }
                },
                "TracingConfig": {
                    "Mode": "PassThrough"
                },
                "Architectures": [
                    "x86_64"
                ],
                "EphemeralStorage": {
                    "Size": 512
                }
            }
        },
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Sub": "${Environment}-lambda-execution-role"
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Sub": "${Environment}-lambda-sqs-timestream-policy"
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "sqs:DeleteMessage",
                                        "sqs:ReceiveMessage",
                                        "sqs:GetQueueAttributes",
                                        "iot:Publish",
                                        "dynamodb:GetItem",
                                        "dynamodb:PutItem",
                                        "timestream:WriteRecords",
                                        "timestream:DescribeEndpoints"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "SQSQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "${Environment}-iot-messages-queue"
                },
                "VisibilityTimeout": 300,
                "MaximumMessageSize": 262144,
                "MessageRetentionPeriod": 345600,
                "DelaySeconds": 0,
                "ReceiveMessageWaitTimeSeconds": 0,
                "SqsManagedSseEnabled": true
            }
        }
    },
    "Outputs": {
        "SQSQueueArn": {
            "Description": "ARN of the SQS queue",
            "Value": {
                "Fn::GetAtt": [
                    "SQSQueue",
                    "Arn"
                ]
            }
        },
        "LambdaFunctionArn": {
            "Description": "ARN of the Lambda function",
            "Value": {
                "Fn::GetAtt": [
                    "LambdaFunction",
                    "Arn"
                ]
            }
        }
    }
}